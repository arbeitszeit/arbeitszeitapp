#!/usr/bin/env sh

# Delete the old document tree that was generated by autodoc. This is
# necessary for documentation files for modules that don't exist in
# the source tree anymore. Simply regenerating the api docs would not
# delete obsolete documentation files.
rm -r docs/modules

sphinx-apidoc \
    -f \
    -o docs/modules \
    . \
    '*_settings.py' 'format_code.py' 'tests/*'
